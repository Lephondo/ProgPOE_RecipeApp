        <Label x:Name="lblUnit" Content="Unit of Measurement" Margin="87,392,423,352" Width="290" Height="40" FontFamily="Lucida Console" FontSize="22" Background="#FFFFFEFE"/>
        <Label x:Name="lblCalories" Content="Calories" Margin="87,470,423,274" Width="290" Height="40" FontFamily="Lucida Console" FontSize="22" Background="#FFFFFEFE"/>
