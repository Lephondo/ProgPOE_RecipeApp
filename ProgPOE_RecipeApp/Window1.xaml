<Window x:Class="ProgPOE_RecipeApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgPOE_RecipeApp"
        mc:Ignorable="d"
        Title="Window1" Height="800" Width="800">
    <Grid x:Name="menu" Background="#FF10E9F9">
        <Label x:Name="lblName" Content="Recipe App" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" Width="600" Height="100" FontFamily="Lucida Sans Unicode" FontSize="55" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnNewRecipe" Content="New Recipe" Margin="250,189,250,545" FontSize="24" FontFamily="Lucida Console" FontWeight="Bold" Click="btnNewRecipe_Click"/>
        <Button x:Name="btnMenu" Content="New Menu" Margin="250,327,250,407" FontSize="24" FontFamily="Lucida Console" FontWeight="Bold" Click="btnMenu_Click"/>
        <Button x:Name="btnDisplayRecipes" Content="Display Recipes" Margin="250,458,250,276" FontSize="24" FontFamily="Lucida Console" FontWeight="Bold" Click="btnDisplayRecipes_Click"/>
        <Button x:Name="btnClose2" Content="Close" Margin="250,579,250,155" FontSize="24" FontFamily="Lucida Console" FontWeight="Bold" Click="btnClose2_Click"/>

    </Grid>
</Window>
